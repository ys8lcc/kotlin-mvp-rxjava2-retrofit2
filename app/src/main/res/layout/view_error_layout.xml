<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="@dimen/image_thumbnail"
        android:layout_height="@dimen/image_thumbnail"
        android:layout_marginBottom="@dimen/normal_margin"
        tools:src="@drawable/ic_cloud_off_black_48dp" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Error Message" />

    <Button
        android:id="@+id/btn_error_retry"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxx_big_margin"
        android:background="@drawable/selector_primary_button"
        android:text="@string/all_retry" />

</LinearLayout>